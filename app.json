{
  "name": "AutoReplyBot",
  "description": "A Telegram bot that automatically sends structured replies to maintain group order.",
  "repository": "https://github.com/STKR2/AutoReplyBot",
  "keywords": ["telegram", "bot", "telebot", "group-management", "auto-reply"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram bot token",
      "required": true
    },
    "ADMIN_ID": {
      "description": "Your Telegram user ID (admin)",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
